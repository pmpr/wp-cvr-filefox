<div class="container">
    <div class="row">
        {% set columns = 'col-12 col-lg-6' %}
        {% for item in items %}
            {% if item.posts is not empty %}
                <div class="{{ columns|raw }} d-flex {{ margin_bottom(loop, columns, 4) }}">
                    <div class="card p-2 w-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            {{ render_if_has_content('h3', {class: 'mb-3'}, item.title) }}
                            <ul class="list-group list-group-flush">
                                {% for post in item.posts %}
                                    <li class="list-group-item px-0 py-2{% if loop.first %} pt-0{% elseif loop.last %} pb-0{% endif %}">
                                        <a href="{{ get_permalink(post)|esc_url }}"
                                           class="card-link">{{ get_title(post)|raw }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                            {% if item.permalink is not empty %}
                                <div class="mt-4 ms-auto">
                                    {{ render_if_has_content('a', {href: get_permalink(item.permalink), class: 'btn btn-primary'}, item.button_text) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</div>

