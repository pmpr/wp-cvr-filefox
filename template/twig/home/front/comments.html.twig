{% embed get_cover_template('common/carousel/index') with {
    carousels: comments,
    container_class: 'container',
    carousel_class: 'full-width animated-carousel front-first-slider max-vh-100',
    carousel_config: {
        loop: true,
        speed: 1500,
        autoplay: {
            delay: 8000
        },
        navigation: true,
        pagination: false,
    }
} %}

    {% block carousel %}
        <article class="card p-2">
            <div class="card-body d-flex">
                {{ get_avatar(carousel, 64, {class: 'avatar-img rounded-circle me-3'})|raw }}
                <div class="pr-text my-auto">
                    <h3>{{ get_comment_author(carousel)|raw }}</h3>
                    <small>{{ subtext|raw }}</small>
                    {{ wpautop(get_comment_text(carousel))|raw }}
                </div>
            </div>
        </article>
    {% endblock %}

{% endembed %}

