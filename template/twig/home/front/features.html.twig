<div class="container">
    <div class="row">
        {% set columns = 'col-6 col-lg-3' %}
        {% for item in items %}
            <article class="{{ columns|raw }} d-flex {{ margin_bottom(loop, columns, 4) }}">
                <div class="card p-2 w-100">
                    <div class="card-body text-center">
                        {{ render_if_has_content('h3', {class: 'mb-4 lh-base fs-4'}, item.text) }}
                        <div class="mt-auto">
                            {{ render_if_has_content('a', {href: get_permalink(item.button_link), class: 'btn btn-primary'}, item.button_text) }}
                        </div>
                    </div>
                </div>
            </article>
        {% endfor %}
    </div>
</div>

