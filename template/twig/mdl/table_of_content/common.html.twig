{% if headings is not empty %}
    <section id="post_toc" class="toc-card card shadow mt-4 mb-5">
        <div class="card-body p-4">
            <div class="row g-0">
                <div class="col-12 col-lg-3 mb-2 mb-lg-0">
                    <div class="toc-title text-lg-center d-flex flex-column justify-content-lg-center">
                        {{ render_icon('fasm/6/set/list', {class: 'icon-white bg-secondary mx-auto icon-5x rounded-circle px-4 mb-3 d-none d-lg-flex'}) }}
                        <h2 class="fs-md fw-normal lh-1 mb-0 mt-0">{{ title|raw }}</h2>
                    </div>
                </div>
                <nav class="col-12 col-lg-9">
                    {% if collapsible %}
                        <span class="h6 my-auto text-info as-link" data-toggle="collapse" data-target=".toc-list"
                              data-replace="{{ show_title|raw|esc_attr }}"
                              aria-expanded="true">{{ hide_title|raw }}</span>
                    {% endif %}
                    <ul class="toc-list{% if collapsible %} collapse show{% endif %}">
                        {{ headings|raw }}
                    </ul>
                </nav>
            </div>
        </div>
    </section>
{% endif %}
