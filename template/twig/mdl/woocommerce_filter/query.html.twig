      data-name="{{ item.name|esc_attr }}" data-value="{{ item.value|esc_attr }}"
      data-filter="{{ item.filter|esc_attr }}">
    {{ item.title|raw }}
    {{ render_icon(remove_icon, {class: 'icon-sm icon-white ms-1 my-auto'}, 1) }}
</span>
