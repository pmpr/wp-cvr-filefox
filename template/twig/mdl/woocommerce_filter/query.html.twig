<a class="badge text-white bg-secondary remove-filter{% if not last %} ms-2{% endif %}"
   href="#" data-name="{{ item.name|esc_attr }}" data-value="{{ item.value|esc_attr }}"
   data-filter="{{ item.filter|esc_attr }}">
    <div class="d-flex">
        <span>{{ item.title|raw }}</span>
        {{ render_icon(remove_icon, {class: 'icon-sm icon-white ms-1'}, 1) }}
    </div>
</a>
