<div class="conversion-container border rounded mt-3">
    <header class="conversion-header p-3 border-bottom">

    </header>
    <div class="conversion-list overflow-auto bg-light p-3 position-relative">
        {% if items is defined
            and items is not empty
            and items.items is defined
            and items.items is not empty %}

            {% for conversion in items.items %}
                {{ pmpr_do_action('ticket_render_frontend_conversion', conversion) }}
            {% endfor %}

        {% else %}
            <div class="pr-ticket-conversion-empty bg-white p-3 rounded position-absolute top-50 start-50 translate-middle">{{ empty_message|raw }}</div>
        {% endif %}

    </div>
    {% if form is not empty %}
        <div class="conversion-form p-3 border-top">
            {{ form|raw }}
        </div>
    {% endif %}
</div>
