{% if items is not empty %}
    <section id="post_faq">
        <h2 class="h2 mb-4 section-title">{{ title|raw }}</h2>
        <div class="accordion accordion-flush mb-3" id="faq_accordion">
            {% for index, item in items %}
                {% set first_item = loop.first %}
                <div class="accordion-item mb-3 border-0">
                    <h3 class="accordion-header" id="faq_question_{{ index|esc_attr }}">
                        <button class="accordion-button fw-bold{% if not first_item %} collapsed{% endif %}" type="button"
                                data-bs-toggle="collapse" data-bs-target="#faq_answer_{{ index|esc_attr }}"
                                aria-expanded="{% if first_item %}true{% else %}false{% endif %}"
                                aria-controls="faq_answer_{{ index|esc_attr }}">
                            {{ item.question|raw }}
                        </button>
                    </h3>
                    <div id="faq_answer_{{ index|esc_attr }}"
                         class="accordion-collapse collapse{% if first_item %} show{% endif %}"
                         aria-labelledby="faq_question_{{ index|esc_attr }}" data-bs-parent="#faq_accordion">
                        <div class="accordion-body no-margin">
                            {{ item.answer|raw }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endif %}

