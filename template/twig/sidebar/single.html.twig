{% extends get_template('./base', _self) %}

{% block inside_container %}
    <div class="row my-5">
        <aside class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
            {% block sidebar %}{% endblock %}
        </aside>
        <div class="col-12 col-md-8 col-lg-6">
            {% block before_main %}{% endblock %}
            <main id="main">
                {% block main %}{% endblock %}
            </main>
            {% block after_main %}{% endblock %}
        </div>
    </div>
{% endblock %}
