{{ action|raw }}
<div class="modal fade" id="{{ id|esc_attr }}" data-bs-backdrop="{% if dismissible %}true{% else %}static{% endif %}"
     {% if dismissible %} data-bs-keyboard="true"{% endif %}
     tabindex="-1" role="dialog" aria-hidden="true" aria-labelledby="{{ id|esc_attr }}_label" data-bs-popper="true">
    <div class="modal-dialog modal-{{ size|default('md')|esc_attr }}{% if centered %} modal-dialog-centered{% endif %}"
         role="document">
        <div class="modal-content">
            {% if title is defined
                and title is not empty %}
                <div class="modal-header">
                    {{ render_if_has_content(title_element|default('strong'), {id: id, class: 'modal-title'}, title) }}
                    <button class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            {% endif %}
            {{ render_if_has_content('div', {class: 'modal-body'}, content) }}
            {% if actions is defined
                and actions is not empty %}
                <div class="modal-footer">
                    {% for button in buttons %}
                        {{ button|raw }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>

