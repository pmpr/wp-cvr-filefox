{% extends get_cover_template('sidebar/dual') %}

{% block main %}
    <div class="my-5">
        {% if alert is defined
            and alert is not empty %}

            {{ render_alert(alert) }}
        {% else %}

            {% include get_cover_template('common/header/index') with {
                has_container: 0,
                jumbotron: title,
                title_attrs: {class: 'mb-4 text-center'}
            } %}

            <div id="message_wrapper" class="my-3 text-center"></div>
            <div class="card download-card position-relative">
                {% if wait_enabled %}
                    <div class="start-download position-absolute top-50 start-50 translate-middle">
                        {{ render_if_has_content('div', {class: 'fs-6'}, wpautop(start_message)) }}
                        <button role="button" class="start-download btn btn-primary btn-lg">{{ start_button|raw }}</button>
                    </div>
                    <div class="progress-bar position-absolute top-50 start-50 translate-middle pr-invisible">
                        {{ render_if_has_content('div', {}, wpautop(wait_message)) }}
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-success"
                                 role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"
                                 id="progress_bar"></div>
                        </div>
                    </div>
                {% endif %}

                <div class="card-body download p-5 text-center pr-invisible">
                    {{ render_if_has_content('div', {class: 'fs-6'}, wpautop(download_message)) }}
                    <a href="#" class="download-link btn btn-primary btn-lg px-5">{{ download_button|raw }}</a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

