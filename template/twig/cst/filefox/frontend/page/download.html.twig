{% extends get_cover_template('container') %}

{% block inside_container %}

    <main class="row justify-content-center">
        <div class="col-12 col-md-6 py-5 my-0 my-md-5">
            {% if alert is defined
                and alert is not empty %}

                {{ render_alert(alert) }}
            {% else %}

                {% include get_cover_template('common/header/index') with {
                    has_container: 0,
                    jumbotron: title,
                    title_attrs: {class: 'mb-4 text-center'}
                } %}

                <div id="message_wrapper" class="my-3 text-center"></div>
                <div class="card download-card position-relative overlay dark-30">
                    {% if wait_enabled %}
                        <div class="progress-bar position-absolute top-50 start-50 translate-middle pr-invisible show">
                            {{ render_if_has_content('div', {}, wpautop(wait_message)) }}
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped progress-bar-animated bg-info"
                                     role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"
                                     id="progress_bar"></div>
                            </div>
                        </div>
                    {% endif %}

                    <div class="card-body download p-5 text-center pr-invisible">
                        {{ render_if_has_content('div', {class: 'fs-6'}, wpautop(download_message)) }}
                        <a href="#" class="download-link btn btn-primary btn-lg px-5">{{ button_text|raw }}</a>
                    </div>
                </div>
            {% endif %}
        </div>
    </main>
{% endblock %}

